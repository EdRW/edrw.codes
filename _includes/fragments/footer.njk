<footer>
  <div class="container">
    <div class="grid">
      <div class="text-center">
        <div>Credits</div>
        <p>
          Built with
          <a href="https://www.11ty.dev/">Eleventy</a> and
          <a href="https://picocss.com">pico css</a>.
          <br />
          Check out the site
          <a href="https://github.com/EdRW/edrw.codes">source</a>.
        </p>
      </div>

      <div class="text-center">
        <div>Around the web</div>
        <div class="social">
          {%- for link in metadata.author.links %}
            <div>
              <a
                href="{{ link.url }}"
                aria-label="{{ link.name }}"
                title="{{ link.name }}"
              >
                {% if  link.icon %}
                  <i class="{{ link.icon }}"></i>
                {% else %}
                  <i class="social-icon"
                    >{% include "public/svg/" + link.name +".svg" %}</i
                  >
                {% endif %}
              </a>
            </div>
          {%- endfor %}
        </div>
      </div>

      <div class="text-center">
        <br />
        <a href="https://humanmademark.com/">
          <img
            class="human-made-logo only-on-dark"
            alt="A logo of a human with a seed germinating in their head, with the words 'Human Made' next to it, along with the website humanmademark.com underneath."
            src="/../public/svg/human-made-white-logo.svg"
          />
          <img
            class="human-made-logo only-on-light"
            alt="A logo of a human with a seed germinating in their head, with the words 'Human Made' next to it, along with the website humanmademark.com underneath."
            src="/../public/svg/human-made-black-logo.svg"
          />
        </a>
      </div>
    </div>

    <!-- ----------------------------------------------------------------------- -->
    <!--                            Row 2: Copyright                             -->
    <!-- ----------------------------------------------------------------------- -->
    <div class="text-center pt-2">
      <small>
        Copyright &copy; 2014 -
        {{ metadata.publishDate | readableDate('yyyy') }}
        {{ metadata.author.name }}.
        All rights reserved.
      </small>
    </div>
  </div>
</footer>
